{
  "name": "@routex/websocket",
  "version": "0.0.5",
  "description": "WebSockets for Routex",
  "keywords": [
    "websocket",
    "ws",
    "routex"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Cretezy/routex-websocket"
  },
  "license": "MIT",
  "author": "Charles Crete <charles@cretezy.com>",
  "files": [
    "dist"
  ],
  "main": "dist/lib/index.js",
  "typings": "dist/types/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "format": "prettier --write '**/*.{js,ts,md,json}'",
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "watch": "tsc -w"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "transform": {
      ".ts": "ts-jest"
    }
  },
  "dependencies": {
    "ws": "^7.0.0",
    "@types/ws": "^6.0.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^12.0.2",
    "codecov": "^3.2.0",
    "husky": "^2.3.0",
    "jest": "^24.5.0",
    "jest-config": "^24.5.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "routex": "^0.0.13",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3333"
  },
  "peerDependencies": {
    "routex": "~0.0.13"
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
